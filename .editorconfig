# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = true
max_line_length = 120

[{*.yaml, *.yml, *.json}]
indent_size = 2

[*.java]
# Do not group imports
ij_java_class_count_to_use_import_on_demand = 3000
ij_java_names_count_to_use_import_on_demand = 3000
ij_any_method_brace_style = end_of_line
ij_any_class_brace_style = end_of_line
ij_any_block_brace_style = end_of_line

[{*.zsh, *.sh, *.bash}]
end_of_line = lf

# HTML
ij_html_quote_style = double